<div class="side-top">
  <div class="user-name">
    <%= current_user.name %>
  </div>
  <div class="create-chat">
    <%= link_to"チャットを作成する",  new_room_path %>
  </div>
</div>
<div class="side-main">
  <% current_user.rooms.each do |room| %>
    <div class="chat-room">
      <div class="chat-name">
         <%= link_to room.name, room_messages_path(room) %>
      </div>
    </div>
  <% end %>
</div>