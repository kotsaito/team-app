<%= render "shared/header" %>

<div class="main">
  <div class="recent-schedule" >
    <h4>＜直近の予定＞</h4>
    <% @schedules.each do |schedule| %>
    <div class="recent-schedule-box">
      <%=  schedule.start_time.strftime('%-m/%d %H:%M') %>
      <%=  schedule.title %>
      <div class = person >
      参加者：
      <%= schedule.person %>
      <%= link_to "詳細",schedule_path(schedule.id), class: 'show-buttan'%>
      </div>
    </div>
    <%end%>
  </div>
  

  <div class = "new-schedule">
  <%= link_to "新規予定作成", new_schedule_path, class: 'new-schedule'%>
  </div>
  <%= month_calendar events: @schedules do |date, schedules| %>
    <%= date.day %>

    <% schedules.each do |schedule| %>
      <div>
        <%= link_to schedule.title, schedule_path(schedule.id), class: 'calendar-schedule'%>
      </div>
    <% end %>
  <% end %>

</div>

<%= render "shared/footer" %>